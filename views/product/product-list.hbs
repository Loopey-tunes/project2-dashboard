{{#if listOfProducts}}
<table class="table p-4 ">
    <thead class="thead-dark ">
        <tr>
            <th class="align-middle" scope="col">#</th>
            <th class="align-middle" scope="col">Name 
                {{sortingButtons 'name'}}
            </th>
            <th class="align-middle" scope="col">Prod. Ref.                
                {{sortingButtons 'ref'}}                
            </th>
            <th class="align-middle" scope="col">Stock
                {{sortingButtons 'stock'}}            
            </th>
            <th class="align-middle" scope="col">Img</th>
            <th class="align-middle" scope="col">Row
                {{sortingButtons 'location.row'}}
            </th>
            <th class="align-middle" scope="col">Lane
                {{sortingButtons 'location.lane'}}
            </th>
            <th class="align-middle" scope="col">Shelf
                {{sortingButtons 'location.shelf'}}
            </th>
            <th class="align-middle" scope="col">Category
                {{sortingButtons 'category'}}
            </th>
            <th class="align-middle" scope="col">Key words
                {{sortingButtons 'keywords'}}
            </th>
            <th class="align-middle" scope="col">Manufacturer
                {{sortingButtons 'manufacturer'}}
            </th>
            <th class="align-middle" scope="col">Edit</th>

        </tr>
    </thead>
    <tbody>
        {{#each listOfProducts}}
        <tr>
            <th scope="row" class="align-middle">{{increment @index}}</th> {{!--to show increment list from handlebars.js --}}
            <td class="align-middle"><a class="card-link" href="/products/{{this.id}}">{{this.name}}</a></td>
            <td class="align-middle">{{this.ref}}</td>
            <td class="align-middle p-2">{{this.stock}}</td>
            {{#if this.image}}
            <td class="align-middle p-1">
                <div style="width: 50px; height: 50px; overflow: hidden;">
                <img style="object-fit: cover; width: 100%; height: 100%;" class="card img-fluid " src="{{this.image}}"
                    alt="Product image">
                </div>
            </td>
            {{else}}
            <td class="align-middle p-1">
                <div style="width: 50px; height: 50px; overflow: hidden;">
                    <img style="object-fit: cover; width: 100%; height: 100%;" class="card img-fluid" src="/images/no-image.jpg"
                        alt="no image">
                </div>
            </td>
            {{/if}}
            <td class="align-middle">{{this.location.row}}</td>
            <td class="align-middle">{{this.location.lane}}</td>
            <td class="align-middle">{{this.location.shelf}}</td>
            <td class="align-middle">{{this.category}}</td>
            <td class="align-middle">{{this.keywords}}</td>
            <td class="align-middle">{{this.manufacturer}}</td>
            <td class="align-middle"><button onclick="window.location.href='/products/{{this.id}}/edit'"
                    class="btn btn-primary btn-sm">Edit</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<button onclick="window.location.href='/products/create'" class="m-3 btn btn-primary btn-sm">Create New Product</button>
{{else}}
<table class="table p-4">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Stock</th>
            <th scope="col">Img</th>
            <th scope="col">Row</th>
            <th scope="col">Lane</th>
            <th scope="col">Shelf</th>
            <th scope="col">Category</th>
            <th scope="col">Key words</th>
            <th scope="col">manufacturer</th>

        </tr>
    </thead>

</table>
<div class="col-12 text-center">No product</div>
<hr>
<button onclick="window.location.href='/products/create'" class="m-3 btn btn-primary btn-sm">Create New Product</button>
{{/if}}