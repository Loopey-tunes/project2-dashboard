<h1 class="m-1">Imported {{products.length}} products</h1>

<table class="table p-4">
    <thead class="thead-dark ">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Prod. Ref.</th>
            <th scope="col">Stock</th>
            <th class="text-center" scope="col">Img</th>
            <th scope="col">Row</th>
            <th scope="col">Lane</th>
            <th scope="col">Shelf</th>
            <th scope="col">Category</th>
            <th scope="col">Key words</th>
            <th scope="col">Manufacturer</th>
            <th scope="col">Edit</th>

        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th scope="row" class="align-middle">{{increment @index}}</th> {{!--to show increment list --}}
            <td class="align-middle"><a class="card-link" href="/products/{{this.id}}">{{this.name}}</a></td>
            <td class="align-middle">{{this.ref}}</td>
            <td class="align-middle">{{this.stock}}</td>
            
            {{#if this.image}}
            <td class="align-middle text-center">
            
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-light" data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop{{this.id}}">
                    <div style="width: 50px; height: 50px; overflow: hidden;">
                        <img style="object-fit: cover; width: 100%; height: 100%;" class="card img-fluid " src="{{this.image}}"
                            alt="Product image">
                    </div>
                </button>
            
                {{!-- Modal --}}
                <div class="modal fade text-center" id="staticBackdrop{{this.id}}" data-bs-backdrop="static"
                    data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog .modal-dialog-centered">
                        <div style="width: 500px; height: 500px; overflow: hidden;" class="modal-content">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            {{!-- <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                            </div> --}}
                            <div class="modal-body pt-0" style="width: 500px; height: 500px; overflow: hidden;">
                                <img style="object-fit: cover; width: 100%; height: 100%;" class="card img-fluid "
                                    src="{{this.image}}" alt="Product image">
                            </div>
                        </div>
                    </div>
                </div>
            </td>

            {{else}}

            <td class="align-middle text-center">
            
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-light" data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop{{this.id}}">
                    <div style="width: 50px; height: 50px; overflow: hidden;">
                        <img style="object-fit: cover; width: 100%; height: 100%;" class="card img-fluid " src="{{this.image}}"
                            alt="Product image">
                    </div>
                </button>
            
                {{!-- Modal --}}
                <div class="modal fade text-center" id="staticBackdrop{{this.id}}" data-bs-backdrop="static"
                    data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog .modal-dialog-centered">
                        <div style="width: 500px; height: 500px; overflow: hidden;" class="modal-content">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            {{!-- <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                            </div> --}}
                            <div class="modal-body pt-0" style="width: 500px; height: 500px; overflow: hidden;">
                                <img style="object-fit: cover; width: 100%; height: 100%;" class="card img-fluid "
                                    src="/images/no-image.jpg" alt="Product image">
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            {{/if}}
            <td class="align-middle">{{this.location.row}}</td>
            <td class="align-middle">{{this.location.lane}}</td>
            <td class="align-middle">{{this.location.shelf}}</td>
            <td class="align-middle">{{this.category}}</td>
            <td class="align-middle">{{this.keywords}}</td>
            <td class="align-middle">{{this.manufacturer}}</td>
            <td class="align-middle"><button onclick="window.location.href='/products/{{this.id}}/edit'"
                    class="btn btn-primary btn-sm">Edit</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<button onclick="window.location.href='/products/create'" class="m-3 btn btn-primary btn-sm">Create New Product</button>